.history{
  margin-top: @padding-small;

  .history-info{
    margin-left: @padding-small;
    margin-right: @padding-small;
    
    p {
      .large();
      &:before{
		content: "";
		display: inline-block;
		font: normal normal normal 14px/1 FontAwesome;
		text-align: right;
		margin-right: 8px;
		width: 13px;
      }
    }
    .utenza::before {
      content: "\f007";
    }
    .apparato::before {
      content: "\f095";
    }
    .cdc::before {
      content: "\f19c";
    }
  }

  h2 {
    color: @base-font-color;
    margin-bottom: 0;
    display: block;
    text-decoration: none;
    padding: @padding-small;
    background-color: #eee;
      
    &:before {
      content: "\f017";
      font: normal normal normal 14px/1 FontAwesome;
      margin-right: @padding-small;
    }
  }
    
  .table-container {
	height: 240px;
  }
  
  .grid-history {  
    width: 100%;
    margin-top: @padding;
    
		th {
		  background-color: #fff;
		  color: @base-font-color;
		  border: none;
		  border-bottom: 1px solid @border-color;
		  font-weight: 500;
		  padding: @padding-xs;
          .x-small-fancy();
          line-height: 20px;
		}

		td {
          vertical-align: middle;
          border-color: #fff;
		  padding: @padding-small @padding-xs;
		}

		table {
		    width: 100%;
		    border-spacing: 0;
		}

		thead tr {
		    width: 100%;
		}

		tr {
          &:nth-child(even) td {
            background-color: @background-menu;
          }
          
          &:after {  /* clearing float */
		    content: ' ';
		    display: block;
		    visibility: hidden;
		    clear: both;
          }
		}

		tbody td, thead th {
			&:nth-child(4){
				.imei, .phone {
				    white-space: normal;
				}
			}
		}

	}
}